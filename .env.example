# Google Gemini (preferred). If set, Gemini will be used for generation.
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# RAG System Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MODEL_NAME=gemini-2.0-flash
TEMPERATURE=0.0

# Storage Configuration
PERSIST_DIRECTORY=vectorstore
UPLOAD_DIRECTORY=uploads

# Note: This project uses FAISS for vector storage and a local deterministic
# embedding implementation. Set PERSIST_DIRECTORY to the directory where the
# FAISS index and metadata will be stored (default: "vectorstore").